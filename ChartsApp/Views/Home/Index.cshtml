
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300">    
    <title>Index</title>
</head>
<body ng-app="chartApp" ng-controller="chartCtrl"> 
    <div class="w3-sidebar w3-bar-block w3-border-right w3-animate-left"
         style="width:270px"
         ng-show="isShowSb">
        <button ng-click="isShowSb = !isShowSb"
            class="w3-bar-item w3-large"
            style="cursor: pointer">
            <span class="w3-right">
                Close &times;
            </span>
        </button>
        <br />
        <select class="w3-select w3-btn w3-border w3-border-green" 
            ng-model="type" ng-options="type for type in chartTypes">            
        </select>
        <h4 class="w3-center">Data:</h4>
        <form name="answerForm">
            <input type="text" ng-model="label" class="w3-input w3-center"
                   style="outline:none;"
                   placeholder="Label:" 
                   required/>
            <input type="number" ng-model="value" class="w3-input w3-center"
                   style="outline:none;"
                   placeholder="Value:" 
                   required/>
            <p class="w3-center">
                <button class="w3-btn w3-border w3-border-green w3-text-green w3-round"
                        type="button"
                        ng-click="onSubmit()"
                        ng-disabled="!answerForm.$valid">
                    <span ng-show="editMode">Update</span>
                    <span ng-show="!editMode">Add</span>
                </button>
                <button class="w3-btn w3-border w3-border-red w3-text-red w3-round"
                        ng-disabled="!editMode"
                        ng-click="onDelete()">
                    Delete
                </button>
                <button class="w3-btn w3-border w3-border-blue w3-text-blue w3-round"
                        ng-click="onClear()">
                    Clear
                </button>
            </p>
        </form>
        <ul class="w3-ul">
            <li ng-repeat="d in dataSource.data"
                class="w3-center w3-hover-gray"
                style="cursor:pointer"
                ng-click="onEdit($index)">
                {{d.label}} ({{d.value}})
            </li>
        </ul>
    </div>
    <div>
        <button class="w3-button w3-white w3-xxlarge"
            ng-click="isShowSb = !isShowSb">&#9776;</button>
    </div>
    <div>
        <fusioncharts 
            width="100%"
            height="600"
            type="{{type}}"
            dataSource="{{dataSource}}">
        </fusioncharts>        
    </div>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.6.5/angular.min.js"></script>    
    <script type="text/javascript" src="~/Scripts/fusioncharts.js"></script>
    <script type="text/javascript" src="~/Scripts/fusioncharts.charts.js"></script>
    <script type="text/javascript" src="~/Scripts/angular-fusioncharts.min.js"></script>
    <script type="text/javascript" src="~/Scripts/zune-theme.js"></script>
    <script type="text/javascript" src="~/Scripts/app/app.js"></script>
</body>
</html>